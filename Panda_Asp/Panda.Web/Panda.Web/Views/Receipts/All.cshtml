@model Panda.Web.Models.Receipts.ReceiptsAllViewModel


<main class="mt-3">
    <h1 class="text-center">My Receipts</h1>
    <hr class="hr-2 bg-panda">
    <div class="d-flex justify-content-between">
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-lg-4 d-flex justify-content-center"><h3>Id</h3></th>
                    <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>Fee</h3></th>
                    <th scope="col" class="col-lg-3 d-flex justify-content-center"><h3>Issued On</h3></th>
                    <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Recipient</h3></th>
                    <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>Actions</h3></th>
                </tr>
            </thead>
            <tbody>

                @foreach(var r in Model.Receipts)
                {
                <tr class="row">
                    <td class="col-lg-4 d-flex justify-content-center"><h5>@r.Id</h5></td>
                    <td class="col-lg-1 d-flex justify-content-center"><h5>$@r.Fee</h5></td>
                    <td class="col-lg-3 d-flex justify-content-center"><h5>@r.IssuedOn</h5></td>
                    <td class="col-lg-2 d-flex justify-content-center"><h5>@r.RecipientName</h5></td>
                    <td class="col-lg-1 d-flex justify-content-center">
                        <a asp-controller="Receipts" asp-action="Details" asp-route-id="@r.Id" class="btn bg-panda text-white">Details</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</main>

